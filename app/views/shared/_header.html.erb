<header class="p-3 bg-dark text-white">
  <div class="container">
    <div class="d-flex flex-wrap align-items-center justify-content-center justify-content-lg-start">
      <%= link_to "/", class: "d-flex align-items-center mb-3 mb-md-0 me-md-5 text-white text-decoration-none" do %>
        <span class="fs-4"><string>WebQAR</string></span>
      <% end %>

      <ul class="nav col-12 col-lg-auto me-lg-auto mb-2 justify-content-center mb-md-0">
        <li><%= link_to "Home", {action: :index, controller: :home }, class: "nav-link px-2 text-secondary" %></li>
        <li><%= link_to t('header_nav_private_library'), private_circuits_path, class: "nav-link px-2 text-white" %></li>
        <li><%= link_to t('header_nav_published_library'), published_circuits_path, class: "nav-link px-2 text-white" %></li>
        <li><%= link_to t('header_nav_about'), home_about_path, class: %w"nav-link px-2 text-white" %></li>
      </ul>

      <form class="col-12 col-lg-auto mb-3 mb-lg-0 me-lg-3">
        <input type="search" class="form-control form-control-dark" placeholder="Search..." aria-label="Search">
      </form>

      <div class="text-end">
        <button type="button" class="btn btn-outline-light me-2">Login</button>
        <button type="button" class="btn btn-warning">Sign-up</button>
      </div>
    </div>
  </div>
</header>