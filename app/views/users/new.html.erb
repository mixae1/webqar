<div class="container col-xl-10 col-xxl-8 px-4 py-5">
  <div class="row align-items-center g-lg-5 py-5">
    <!--
    <div class="col-lg-7 text-center text-lg-start">
      <h1 class="display-4 fw-bold lh-1 mb-3">Registration</h1>
      <p class="col-lg-10 fs-4">A text.</p>
    </div>
    -->
    <div class="col-md-10 mx-auto col-lg-5">
      <%= form_for User.new, html: { class: "p-4 p-md-5 border rounded-3 bg-light" }  do |t| %>
        <div class="form-floating mb-3">
          <%= t.email_field :email, class: "form-control", id: "floatingInput", placeholder: "dummy" %>
          <label for="floatingInput">Email address</label>
        </div>

        <div class="form-floating mb-3">
          <%= t.password_field :password, class: "form-control", id: "floatingInput", placeholder: "dummy" %>
          <label for="floatingPassword">Password</label>
        </div>

        <div class="checkbox mb-3">
          <label>
            <input type="checkbox" value="remember-me"> Remember me
          </label>
        </div>

        <%= t.submit t('signup'), class: "w-100 btn btn-lg btn-primary" %>
        <hr class="my-4">
        <small class="text-muted">By clicking Sign up, you agree to the terms of use.</small>
      <% end %>
    </div>
  </div>
</div>