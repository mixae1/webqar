<div class="container col-xl-10 col-xxl-8 px-4 py-5">
  <div class="row align-items-center g-lg-5 py-5">
    <div class="col-md-10 mx-auto col-lg-5">

      <h2 class="mb-3">Log in</h2>

      <%= form_for(resource, as: resource_name, url: session_url(resource_name)) do |f| %>
        <div class="form-floating mb-3">
          <%= f.email_field :email, class: "form-control", id: "floatingEmail", autofocus: true, placeholder: "Email address" %>
          <label for="floatingEmail">Email address</label>
        </div>

        <div class="form-floating mb-3">
          <%= f.password_field :password, class: "form-control", id: "floatingPassword", placeholder: "Password" %>
          <label for="floatingPassword">Password</label>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="checkbox mb-3">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>

        <%= f.submit t('login'), class: "w-100 btn btn-lg btn-primary" %>
      <% end %>

      <!--
      <%= render "devise/shared/links" %>
      -->
    </div>
  </div>
</div>