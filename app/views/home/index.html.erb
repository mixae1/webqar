<div class="px-4 pt-5 my-5 text-center">
  <h1 class="display-4 fw-bold">
    <% if session[:auth].nil? %>
      <span>Welcome to WebQAR</span>
    <% else %>
      <span>Welcome to WebQAR, <%= @username %></span>
    <% end %>
  </h1>
  <div class="col-lg-6 mx-auto">
    <p class="lead mb-4"><%= t('home_index_summary') %></p>
    <div class="d-grid gap-2 d-sm-flex justify-content-sm-center mb-5">
      <%= link_to users_new_path, class: "btn btn-primary btn-lg px-4 me-sm-3" do %>
        <% if session[:auth].nil? %>
          <%= t('signup') %>
        <% else %>
          <%= t('create_a_circuit') %>
        <% end %>
      <% end %>
      <%= link_to t('about'), about_path, class: "btn btn-outline-secondary btn-lg px-4" %>
    </div>
  </div>
  <div class="overflow-hidden">
    <div class="container px-5">
      <img src="/assets/webqar.jpg" class="img-fluid border rounded-3 shadow-lg mb-5" width="1920" height="885" loading="lazy">
    </div>
  </div>
</div>